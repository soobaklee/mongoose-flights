<%- include('../partials/header') %>

    <h2>Flight Departures</h2>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight No</th>
                <th>Departs</th>
                <th>Add'l Details</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
                <tr>
                    <td><%= f.airline %></td>
                    <td><%= f.airport %></td>
                    <td><%= f.flightNo %></td>
                    <td><%= f.departs %></td>
                    <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</main>
</body>
</html>